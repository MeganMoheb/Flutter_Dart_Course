

//future,stream problem
//-----------------------------------------Q1----------------------------------------------
import 'dart:io';

Future<int> sumStream(Stream<int> stream) async {
  var sum = 0;
  await for (final value in stream) {
    sum += value;
  }
  return sum;
}

void main() async {
  Stream<int> myStream = Stream.fromIterable([1, 2, 3, 4, 5]);
  int total = await sumStream(myStream);
  print('The sum is: $total');
}

//-----------------------------------------Q2----------------------------------------------


import 'dart:io';

void main() {
  List<Map<String, dynamic>> users = [];

  for (int i = 0; i < 2; i++) {
    stdout.write('Enter name and age for user ${i + 1} : ');
    String? input = stdin.readLineSync();

    if (input != null && input.trim().isNotEmpty) {
      List<String> parts = input.trim().split(' ');

      if (parts.length == 2) {
        String name = parts[0];
        int? age = int.tryParse(parts[1]);

        if (age != null) {
          users.add({'name': name, 'age': age});
        } else {
          print('Invalid age. Please enter a number.');
          i--;
        }
      } else {
        print('Please enter exactly: name age');
        i--;
      }
    } else {
      print('Empty input. Try again.');
      i--;
    }
  }

  int age1 = users[0]['age'] as int;
  int age2 = users[1]['age'] as int;

  var result = 100 - (age1 + age2);
  print('Result: $result');
}

