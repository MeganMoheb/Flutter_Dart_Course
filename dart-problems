import 'dart:io';
import 'dart:math';

void main() {
  List<int> num = [];
  for (int i = 0; i < 100; i++) {
    num.add(i);
  }

  final random = Random();
  int choice = num[random.nextInt(num.length)];

  while (true) {
    stdout.write('Guess the number (0â€“99): ');
    int userGuess = int.parse(stdin.readLineSync()!);

    if (choice == userGuess) {
      print("You are a witch!");
      break;
    } else {
      print("You lied to me! Try again.");
    }
  }
}

//-----------------------------------------Q9----------------------------------------------

import 'dart:io';

void main() {
  stdout.write("Please give us a number: ");
  int chosenNumber = int.parse(stdin.readLineSync()!);

  checkPrime(chosenNumber);
}

void checkPrime(int number) {
  if (number < 2) {
    print("The chosen number is not a prime");
    return;
  }

  bool isPrime = true;

  for (int i = 2; i <= number ~/ 2; i++) {
    if (number % i == 0) {
      isPrime = false;
      break;
    }
  }

  if (isPrime) {
    print("The chosen number is a prime");
  } else {
    print("The chosen number is not a prime");
  }
}

//-----------------------------------------Q10----------------------------------------------
import 'dart:io';
import 'dart:math';

void main() {
  List<int> a = [5, 10, 15, 20, 25];

  print(flnum(a));
}

List<int> flnum(List<int> a) {
  List<int> c = [];

  for (var i in a) {
    if (i == a[0] || i == a[a.length - 1]) {
      c.add(i);
    }
  }

  return c;
}

//-----------------------------------------Q11----------------------------------------------


import 'dart:io';
import 'dart:math';

void main() {

  int chosenNumber = int.parse(stdin.readLineSync()!);

print (fibicconi(chosenNumber));

}

List<int> fibicconi(int chosenNumber) {
  List<int> a=[];
  int first=0;
  int sec=1;
  a.add(first);
  a.add(sec );
 while (chosenNumber>2){
    int next=first+sec;
    first=sec;
    sec=next;
    a.add(next);
    chosenNumber--;
  }
  return a;
}


//-----------------------------------------Q12----------------------------------------------

import 'dart:io';
import 'dart:math';

void main() {
  int low = 0;
  int high = 100;
  int guessCount = 0;

  print("Think of a number between 0 and 100. I will try to guess it!");

  while (true) {
    int guess = ((low + high) ~/ 2);
    guessCount++;

    stdout.write("Is your number $guess? (enter 'higher', 'lower', or 'correct'): ");
    String? response = stdin.readLineSync()?.toLowerCase().trim();

    if (response == 'correct') {
      print("Yay! I guessed your number in $guessCount tries. ðŸ§ ");
      break;
    } else if (response == 'higher') {
      low = guess + 1;
    } else if (response == 'lower') {
      high = guess - 1;
    } else {
      print("Invalid input. Please type 'higher', 'lower', or 'correct'.");
      guessCount--;
    }

  }
}







